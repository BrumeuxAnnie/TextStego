<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:theme="@style/AppTheme.Base">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <Button
        android:id="@+id/button_reveal_msg"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonxml"
        android:gravity="center"
        android:text="@string/tvreveal"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btext"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btext"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="@string/btext"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/buttonxml"

        android:focusable="true"
        android:singleLine="false"
        android:textColorHighlight="#ff1fff96"
        android:shadowColor="#ff4caf50"
        android:layout_below="@+id/app_bar"
        android:layout_alignLeft="@+id/button_reveal_msg"
        android:layout_alignStart="@+id/button_reveal_msg"
        android:layout_marginTop="33dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bar"
        android:background="#4caf50"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7172050946649011/4954678682"
        android:layout_alignTop="@+id/bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>